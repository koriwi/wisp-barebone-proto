{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}